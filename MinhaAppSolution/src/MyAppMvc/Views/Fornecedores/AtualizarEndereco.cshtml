@model Dev.AppMvc.ViewModels.FornecedorViewModel
@{
    ViewData["Title"] = "Atualizar Endereço";
}
<div class="modal-header">
    <h4 class="modal-title">@ViewData["Title"]</h4>
    <button type="button" class="btn-close" data-dismiss="Modal">
        <span arial-hidden="true">x</span><span class="sr-only">Fechar</span>
    </button>
</div>

<form asp-action="AtualizarEndereco">
    <div class="modal-body">
        <input type="hidden" asp-for="Endereco.FornecedorId"/>
        <input type="hidden" asp-for="Endereco.Id"></input>

        <partial name="_Endereco"/>

        <div class="modal-footer">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Atualizar Endereço" class="btn btn-success"/>
                <input type="button" class="btn btn-info" value="Fechar" data-dismiss="Modal"></input>
            </div>
        </div>
    </div>
</form>
