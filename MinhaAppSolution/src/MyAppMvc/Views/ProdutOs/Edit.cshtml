@model Dev.AppMvc.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Editar" + Model.Nome;
}

<h4 style="padding-top:30px">@ViewData["Title"]</h4>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>   <br>       
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea cols="40" rows="5" asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div><br>

            <div class="form-group">
                <label>Imagem atual</label><br>
                <img src="~/Imagens/@Model.Imagem" alt="@Model.Imagem" style="width:90px; height: 110px"/>                               
            </div><br>
            <div class="form-group">
                <label asp-for="ImagemUplade" class="control-label"></label>

                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="ImagemUplade" asp-for="ImagemUplade">
                    <label data-browse="Procurar" style="width: 400px" class="custom-file-label" for="ImagemUplade"></label>
                    <label style="display:none" id="img_nome"></label>
                </div>
            </div><br>
            
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div><br>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
