@model Dev.AppMvc.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Datalhe do produto - " + Model.Nome;
}

<h4>@ViewData["Title"]</h4>
<hr />


    <div class="row">
        <div class="col-md-4">
            <img src="~/Imagens/@Model.Imagem" alt="@Model.Imagem" style="width:200px; height: 300px" />
        </div>
        <div class="col-md-6">
        <dt>
            @Html.DisplayNameFor(model => model.Fornecedor)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Fornecedor.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Imagem)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Imagem)
        </dd>
        <dt>
            @Model.Valor.ToString("C")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ativo)
        </dd>
        
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn btn-success" asp-action="Index">Voltar</a>
        </form>
        </div>
    
    </div>

    
</div>
